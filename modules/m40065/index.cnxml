                <entry>1,00045</entry>
              </row>
              <row>
                <entry>Water: Ice</entry>
                <entry>1,31</entry>
              </row>
              <row>
                <entry>Water: Liquid (<m:math overflow="scroll"><m:msup><m:mn>20</m:mn><m:mo>∘</m:mo></m:msup></m:math>C)</entry>
                <entry>1,333</entry>
              </row>
              <row>
                <entry>Acetone</entry>
                <entry>1,36</entry>
              </row>
              <row>
                <entry>Ethyl Alcohol (Ethanol)</entry>
                <entry>1,36</entry>
              </row>
              <row>
                <entry>Sugar solution (30%)</entry>
                <entry>1,38</entry>
              </row>
